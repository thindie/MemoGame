<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentation.FragmentStart"
    tools:layout="@layout/fragment_start"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/bu_startGame"
        style="@style/button"
        android:text="старт"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bu_showScores"
        style="@style/button"
        android:text="лучшие игроки"
        app:layout_constraintBottom_toTopOf="@id/bu_startGame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5

" />

    <TextView
        android:id="@+id/tv_Opt1"
        style="@style/decor_card"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/purple_700"
        app:layout_constraintBottom_toBottomOf="@id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="50dp"/>

    <TextView
        android:id="@+id/tv_Opt2"
        style="@style/decor_card"
        android:layout_marginStart="4dp"
        android:background="@color/purple_700"
        app:layout_constraintBottom_toBottomOf="@id/guideline"
        app:layout_constraintStart_toEndOf="@id/tv_Opt1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_Opt3"
        style="@style/decor_card"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/purple_700"
        app:layout_constraintBottom_toBottomOf="@id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="50dp" />

    <TextView
        android:id="@+id/tv_Opt4"
        style="@style/decor_card"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="4dp"
        android:background="@color/purple_700"
        android:layout_marginTop="110dp"
        app:layout_constraintBottom_toBottomOf="@id/guideline"
        app:layout_constraintStart_toEndOf="@id/tv_Opt1"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>